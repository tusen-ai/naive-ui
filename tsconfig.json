{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "naive-ui": ["./src"],
      "naive-ui/generic": ["./generic"]
    },
    "resolveJsonModule": true,
    "types": ["vue/jsx", "jest"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "declaration": true,
    "outDir": "./build/dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
