{
  "compilerOptions": {
    "paths": {
      "naive-ui": ["./src"]
    },
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "ES6",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"]
  }
}
